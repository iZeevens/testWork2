{
	"semi": true,
	"trailingComma": "all",
	"singleQuote": true,
	"tabWidth": 2,
	"arrowParens": "always",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": ["*.css", "*.scss"],
			"options": {
				"singleQuote": false
			}
		},
		{
			"files": ["*.json", ".eslintrc", ".prettierrc"],
			"options": {
				"singleQuote": false,
				"trailingComma": "none"
			}
		}
	]
}
